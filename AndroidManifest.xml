<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidtank"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.androidtank.ItemListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.androidtank.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.example.androidtank.ItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidtank.ItemListActivity" />
        </activity>
        <activity
            android:name="com.example.androidtank.MailMain"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:parentActivityName="com.example.androidtank.MailMain"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.androidtank.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
           
        </activity>
        <activity
            android:name="com.example.androidtank.FragMainActivity"
            android:label="@string/title_activity_frag_main" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
